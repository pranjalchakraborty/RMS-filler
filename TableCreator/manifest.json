{
  "manifest_version": 3,
  "name": "Routine Scraper & Filler",
  "version": "4.0",
  "description": "Scrapes routine data and fills execution forms from an Excel file.",
  
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],

  "host_permissions": [
    "https://polytechnic.wbtetsd.gov.in/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://polytechnic.wbtetsd.gov.in/admin/routine_management_c/employee_routine/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [ "xlsx.full.min.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}